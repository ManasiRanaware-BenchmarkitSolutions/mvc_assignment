@model EFDBDoctorPatient.Models.Patient

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit Patient</h2>
<form action="/patient/edit/@Model.PatientID" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="PatientName">Patient Name</label>
            <input type="hidden" name="PatientID" value="@Model.PatientID" />
            <input type="text" class="form-control" id="PatientName" name="PatientName" placeholder="Patient Name" value="@Model.PatientName" />
        </div>

        <div class="form-group col-md-6">
            <label for="Age">Age</label>
            <input type="text" class="form-control" id="Age" name="Age" placeholder="Age" value="@Model.Age" />
        </div>

        <div class="form-group col-md-6">
            @{
                string doa = "";
                if (Model.DOA.HasValue)
                {
                    doa = Model.DOA.Value.ToString("yyyy-MM-dd");
                }
            }
            <label for="DOA">Date of Admission</label>
            <input type="date" class="form-control" id="DOA" name="DOA" placeholder="DOA" value="@doa" />
        </div>

        <div class="form-group col-md-6">
            <label for="Gender">Gender</label>
            <input type="text" class="form-control" id="Gender" name="Gender" placeholder="Gender" value="@Model.Gender" />
        </div>

        <div class="form-group col-md-6">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" value="@Model.Address" />
        </div>

        <div class="form-group col-md-6">
            <label for="Contact">Contact</label>
            <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Contact" value="@Model.Contact" />
        </div>

        <div class="form-group col-md-6">
            <label for="DoctorID">Doctor ID</label>
            <select class="form-control" id="DoctorID" name="DoctorID">
                <option value="">Please Select</option>
                @foreach (var cat in ViewBag.Doctors)
                {
                    if (cat.DoctorID == Model.DoctorID)
                    {
                        <option value="@cat.DoctorID" selected="selected">@cat.DoctorName</option>
                    }
                    else
                    {
                        <option value="@cat.DoctorID">@cat.DoctorName</option>
                    }
                }
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="MedicineID">Medicine ID</label>
            <select class="form-control" id="MedicineID" name="MedicineID">
                <option value="">Please Select</option>
                @foreach (var m in ViewBag.Medicines)
                {
                    if (m.MedicineID == Model.MedicineID)
                    {
                        <option value="@m.MedicineID" selected="selected">@m.MedicineName</option>
                    }
                    else
                    {
                        <option value="@m.MedicineID">@m.MedicineName</option>
                    }
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="Photo" value="@Model.Photo" />
            <td><img src="data:image;base64,@Model.Photo" width="100px"></td>
        </div>

        @*<div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="Active" checked="@Model.Active" name="Active" value="true" />
                <label class="form-check-label" for="Active">Active</label>
            </div>
        </div>*@

        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-danger" href="/patient/index">Cancel</a>
    </div>
</form>

