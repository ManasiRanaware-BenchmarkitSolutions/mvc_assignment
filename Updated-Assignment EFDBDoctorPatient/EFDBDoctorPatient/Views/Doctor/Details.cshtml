@model EFDBDoctorPatient.Models.Doctor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Doctor Details</h2>
<table class="table">
    <tr>
        <th>Doctor ID</th>
        <td>@Model.DoctorID</td>
    </tr>
    <tr>
        <th>Doctor Name</th>
        <td>@Model.DoctorName</td>
    </tr>
    <tr>
        <th>Specialization </th>
        <td>
            @if (Model.Specialization != null)
            {
                <span>@Model.Specialization</span>
            }
        </td>
    </tr>
    
    <tr>
        <th>Address </th>
        <td>
            @if (Model.Address != null)
            {
                <span>@Model.Address</span>
            }
        </td>
    </tr>
    <tr>
    <tr>
        <th>Contact</th>
        <td>
            @if (Model.Contact != null)
            {
                <span>@Model.Contact</span>
            }
        </td>
    </tr>
    <tr>
        <th>Photo</th>
        <td><img src="data:image;base64,@Model.Photo" width="100px"></td>
    </tr>
</table>

<a href="/doctor/index">Back to Doctors List</a>