@model EFDBDoctorPatient.Models.Doctor


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Add Doctor</h2>

<form action="/doctor/create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="DoctorName">Doctor Name</label>
            <input type="text" class="form-control" id="DoctorName" name="DoctorName" placeholder="Doctor Name" />
            @Html.ValidationMessageFor(temp=>temp.DoctorName)
        </div>

        <div class="form-group col-md-6">
            <label for="Specialization">Specialization</label>
            <input type="text" class="form-control" id="Specialization" name="Specialization" placeholder="Specialization" />
            @Html.ValidationMessageFor(temp => temp.Specialization)
        </div>

        <div class="form-group col-md-6">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" />
            @Html.ValidationMessageFor(temp => temp.Address)
        </div>

        <div class="form-group col-md-6">
            <label for="Contact">Contact</label>
            <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Contact" />
            @Html.ValidationMessageFor(temp => temp.Contact)
        </div>


        <div class="form-group">
            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="Photo" />
        </div>


    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" href="/doctor/index">Cancel</a>

</form>
