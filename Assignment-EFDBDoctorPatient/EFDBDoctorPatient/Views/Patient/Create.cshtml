@model EFDBDoctorPatient.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Add Patient</h2>
<form action="/patient/create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="PatientName">Patient Name</label>
            <input type="text" class="form-control" id="PatientName" name="PatientName" placeholder="Patient Name" />
            @Html.ValidationMessageFor(temp => temp.PatientName)
        </div>

        <div class="form-group col-md-6">
            <label for="Age">Age</label>
            <input type="text" class="form-control" id="Age" name="Age" placeholder="Age" />
            @Html.ValidationMessageFor(temp => temp.Age)
        </div>

        <div class="form-group col-md-6">
            <label for="DOA">Date of Admission</label>
            <input type="date" class="form-control" id="DOA" name="DOA" placeholder="Date of Admission" />
            @Html.ValidationMessageFor(temp => temp.DOA)
        </div>

        <div class="form-group col-md-6">
            <label for="Gender">Gender</label>
            <select class="form-control" id="Gender" name="Gender" placeholder="Gender">
                <option value="">Please Select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Others">Others</option>
            </select>
            @Html.ValidationMessageFor(temp => temp.Gender)
        </div>

        <div class="form-group col-md-6">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" />
            @Html.ValidationMessageFor(temp => temp.Address)
        </div>

        <div class="form-group col-md-6">
            <label for="Contact">Contact</label>
            <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Contact" />
            @Html.ValidationMessageFor(temp => temp.Contact)
        </div>

        <div class="form-group col-md-6">
            <label for="DoctorID">Doctor ID</label>
            <select class="form-control" id="DoctorID" name="DoctorID">
                <option value="">Please Select</option>
                @foreach (var cat in ViewBag.Doctors)
                {
                    <option value="@cat.DoctorID">@cat.DoctorName</option>
                }
            </select>           
            @Html.ValidationMessageFor(temp => temp.DoctorID)

        </div>

        <div class="form-group">
            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="Photo" />
        </div>

        @*<div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="Active" name="Active" value="true" />
                    <label class="form-check-label" for="Active"> Active </label>
                </div>
            </div>*@

    </div>

    @Html.ValidationSummary()
    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" href="/patient/index">Cancel</a>

</form>
