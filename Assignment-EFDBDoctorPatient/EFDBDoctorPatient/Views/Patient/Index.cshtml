            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=Contact & IconClass=fa-sort-asc&PageNo=1">Contact No</a>
                if (ViewBag.SortColumn == "Contact")
                {
