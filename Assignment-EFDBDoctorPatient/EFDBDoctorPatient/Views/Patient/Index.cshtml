@model List<EFDBDoctorPatient.Models.Patient>

@{
    ViewBag.Title = "Patients";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>List Of Patients</h2>

<a class="btn btn-primary" href="/patient/create">Create</a>
<form action="/patient/index">
    <div class="form-group">
        <a href="#" class="list-group-item text-black" style="background-color:transparent">Search based on following attributes</a>
        <div class="row">
            <div class="col">
                <input type="text" name="PatientName" placeholder="Patient Name" class="form-control" value="@ViewBag.PatientNameName" />
            </div>
            <div class="col">
                <input type="text" name="Address" placeholder="Address" class="form-control" value="@ViewBag.Address" />
            </div>
            <div class="col">
                <input type="text" name="DoctorName" placeholder="DoctorName" class="form-control" value="@ViewBag.DoctorName" />
            </div>
            @*<button type="submit" class="btn btn-primary" style="margin-left:60px">Go</button>*@
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-outline-dark">Search</button>
        </div>
</form>



<table class="table">
    <tr class="table-secondary">
        @*<th style="width:15%">
                Photo
            </th>*@
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=PatientID & IconClass=fa-sort-asc&PageNo=1">Patient ID</a>
                if (ViewBag.SortColumn == "PatientID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/patient/index?SortColumn=PatientID & IconClass=fa-sort-desc&PageNo=1">Patient ID</a>
                if (ViewBag.SortColumn == "PatientID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:15%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=PatientName & IconClass=fa-sort-asc&PageNo=1">Patient Name</a>
                if (ViewBag.SortColumn == "PatientName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/patient/index?SortColumn=PatientName & IconClass=fa-sort-desc&PageNo=1">Patient Name</a>
                if (ViewBag.SortColumn == "PatientName")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=Age & IconClass=fa-sort-asc&PageNo=1">Age</a>
                if (ViewBag.SortColumn == "Age")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/patient/index?SortColumn=Age & IconClass=fa-sort-desc&PageNo=1">Age</a>
                if (ViewBag.SortColumn == "Age")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=DOA & IconClass=fa-sort-asc&PageNo=1">Date Of Admission</a>
                if (ViewBag.SortColumn == "DOA")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/patient/index?SortColumn=DOA & IconClass=fa-sort-desc&PageNo=1">Date Of Admission</a>
                if (ViewBag.SortColumn == "DOA")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>
        <th style="width:5%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=Gender & IconClass=fa-sort-asc&PageNo=1">Gender</a>
                if (ViewBag.SortColumn == "Gender")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
            else
            {
                <a href="/patient/index?SortColumn=Gender & IconClass=fa-sort-desc&PageNo=1">Gender</a>
                if (ViewBag.SortColumn == "Gender")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
        </th>

        <th style="width:10%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=Address & IconClass=fa-sort-asc&PageNo=1">Address</a>
                if (ViewBag.SortColumn == "Address")
                {
