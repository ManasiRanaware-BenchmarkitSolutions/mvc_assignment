                }
            }
        </th>
        <th style="width:15%">
            @if (ViewBag.IconClass == "fa-sort-desc")
            {
                <a href="/patient/index?SortColumn=DoctorID & IconClass=fa-sort-asc&PageNo=1">Doctor Name</a>
                if (ViewBag.SortColumn == "DoctorID")
                {
                    <i class="fa @ViewBag.IconClass"></i>
                }
            }
